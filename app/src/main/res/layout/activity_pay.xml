<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.PayActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="44dp">
        <ImageView
            android:id="@+id/back_index"
            android:layout_margin="10dp"
            android:layout_width="20dp"
            android:layout_gravity="center"
            android:background="@mipmap/btn_back_w"
            android:layout_height="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="充值"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_weight="1"/>
        <ImageView
            android:layout_margin="10dp"
            android:layout_width="20dp"
            android:background="@mipmap/btn_more_w"
            android:layout_height="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16dp"
            android:text="余额"/>
        <TextView
            android:id="@+id/balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="16dp"
            android:text="0.00"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16dp"
            android:text="硬币"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="请选择充值额度（单位：硬币）"/>
    <com.ahyapo.buing.view.MultiLineRadioGroup
        android:id="@+id/radioGroup"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <RadioButton
                android:id="@+id/money_btn_1"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:layout_height="match_parent"
                android:text="10"
                android:textColor="@color/tag_text_color_selector"
                android:textSize="16dp"
                android:background="@drawable/pay_selector"
                style="@style/button_tag_style"/>
            <RadioButton
                android:id="@+id/money_btn_2"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:layout_height="match_parent"
                android:text="30"
                android:textColor="@color/tag_text_color_selector"
                android:textSize="16dp"
                android:background="@drawable/pay_selector"
                style="@style/button_tag_style"/>
            <RadioButton
                android:id="@+id/money_btn_3"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:layout_height="match_parent"
                android:text="100"
                android:textColor="@color/tag_text_color_selector"
                android:textSize="16dp"
                android:background="@drawable/pay_selector"
                style="@style/button_tag_style"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <RadioButton
                android:id="@+id/money_btn_4"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:layout_height="match_parent"
                android:text="300"
                android:textColor="@color/tag_text_color_selector"
                android:textSize="16dp"
                android:background="@drawable/pay_selector"
                style="@style/button_tag_style"/>
            <RadioButton
                android:id="@+id/money_btn_5"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:layout_height="match_parent"
                android:text="500"
                android:textColor="@color/tag_text_color_selector"
                android:textSize="16dp"
                android:background="@drawable/pay_selector"
                style="@style/button_tag_style"/>
            <RadioButton
                android:id="@+id/money_btn_6"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:layout_height="match_parent"
                android:text="1000"
                android:textColor="@color/tag_text_color_selector"
                android:textSize="16dp"
                android:background="@drawable/pay_selector"
                style="@style/button_tag_style"/>
        </LinearLayout>
    </com.ahyapo.buing.view.MultiLineRadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="应付金额"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#F44336"
            android:layout_marginRight="5dp"
            android:text="￥"/>
        <TextView
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#F44336"
            android:text="1.00"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="充值完成后，您可以使用硬币购买图片版权，完成图片下载，保护用户版权，从此刻做起。"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看详情"
        android:textColor="@color/BlueAGreen"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/recharge"
        android:layout_margin="20dp"
        android:layout_width="200dp"
        android:text="立即支付"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/edit_border_blue"
        android:textColor="@color/white"
        android:textSize="13dp"
        android:layout_height="30dp"/>
</LinearLayout>