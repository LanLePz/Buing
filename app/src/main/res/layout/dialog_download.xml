<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/edit_background_banner"
    android:layout_gravity="center"
    android:padding="20dp"
    android:gravity="center">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下载图片"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="本次下载需要消耗 "
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2"
            android:textColor="#F84A4A"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:text="("
            android:gravity="center"/>
        <TextView
            android:id="@+id/user_wallet"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="123"
            android:gravity="center"
            android:textColor="#01c4cc"/>
        <ImageView
            android:layout_width="15dp"
            android:src="@mipmap/img_money"
            android:layout_height="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:text=")"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" 硬币，是否下载"
            android:gravity="center"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:id="@+id/download_btn"
            android:layout_width="240dp"
            android:gravity="center"
            android:background="@drawable/edit_border_blue"
            android:layout_height="30dp">
            <TextView
                android:id="@+id/download_status"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="立即下载"
                android:textSize="13dp"
                android:gravity="center"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:text="("
                android:textSize="13dp"
                android:textColor="@color/white"
                android:gravity="center"/>
            <TextView
                android:id="@+id/download_percent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="13dp"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/need_space"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="1.5M"
                android:textSize="13dp"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=")"
                android:textSize="13dp"
                android:textColor="@color/white"
                android:gravity="center"/>
        </LinearLayout>
        <ProgressBar
            android:id="@+id/download_progress"
            android:layout_width="220dp"
            android:layout_height="2dp"
            android:layout_marginBottom="2dp"
            android:visibility="gone"
            android:layout_gravity="bottom|center"
            android:max="100"
            android:background="@color/BlueAGreen"
            android:progress="0"
            style="?android:attr/progressBarStyleHorizontal"/>
    </FrameLayout>

    <TextView
        android:id="@+id/cancel_download"
        android:layout_width="240dp"
        android:layout_marginTop="10dp"
        android:text="取消"
        android:gravity="center"
        android:textSize="13dp"
        android:background="@drawable/edit_border_white"
        android:layout_height="30dp"/>

</LinearLayout>